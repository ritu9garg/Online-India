<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <LinearLayout
        android:id="@+id/pop_lay"
        android:layout_width="300dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:background="@drawable/border"
        android:gravity="center"
        android:orientation="vertical"
        android:weightSum="1">

        <TextView
            android:layout_width="258dp"
            android:layout_height="wrap_content"
            android:text="Choose Colours"
            android:textSize="@dimen/size18"
            android:textColor="@color/black"
            android:layout_weight="0.45" />

        <LinearLayout
            android:layout_width="273dp"
            android:layout_height="67dp"
            android:layout_gravity="center"
            android:background="@drawable/border"

            android:gravity="center"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/theme_blue"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_marginLeft="10dp"
                android:src="@color/Blue"
                app:civ_border_color="#94585757"
                app:civ_border_width="2dp" />

            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/theme_green"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_marginLeft="10dp"
                android:src="@color/Green"
                app:civ_border_color="#94585757"
                app:civ_border_width="2dp" />

            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/theme_dark_orange"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_marginLeft="10dp"
                android:src="@color/DarkOrange"
                app:civ_border_color="#94585757"
                app:civ_border_width="2dp" />

            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/theme_sky_blue"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_marginLeft="10dp"
                android:src="@color/SkyBlue"
                app:civ_border_color="#94585757"
                app:civ_border_width="2dp" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>