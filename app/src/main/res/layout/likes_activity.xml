<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/White"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent">

    <LinearLayout
        android:id="@+id/likes_discription"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:descendantFocusability="blocksDescendants"
        android:orientation="horizontal"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.70"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image1"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_margin="5dp"
                android:src="@mipmap/ic_launcher" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/size5"
            android:layout_weight="1.27"
            android:orientation="vertical"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/titel1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="0.8"
                    android:maxLength="100"
                    android:text="देश में गाय पर सियासत, लेकिन बदहाल हैं दिल्ली की गौशालाएं"
                    android:textColor="@color/Blue"
                    android:textSize="14dp" />

                <ImageButton
                    android:id="@+id/remove_from_list"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="@dimen/size10"
                    android:onClick="showpopup"
                    android:background="@color/White"
                    android:src="@drawable/threedots" />
            </LinearLayout>

            <TextView
                android:id="@+id/content1"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginLeft="@dimen/size5"
                android:layout_marginTop="@dimen/size5"
                android:layout_weight="1"
                android:maxLength="147"
                android:text="OnlineCG रायपुर। प्रदेश के सबसे नामी पं. रविशंकर शुक्ल विवि के एमए संस्कृत द्वितीय वर्ष की वार्षिक परीक्षा का परिणाम बेहद चौंकाने वाला है। मार्च-अप्रैल 2017 को हुई इस परीक्षा का परिणाम गुरुवार को जारी कर दिया गया।"
                android:textColor="@color/Black"
                android:textSize="12dp" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#28000000">
    </View>
</LinearLayout>