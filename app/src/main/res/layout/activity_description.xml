<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/discription_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/Blue"
        android:theme="@style/AppTheme3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4">

            <LinearLayout
                android:id="@+id/img_discription_back"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="0.7">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="@dimen/size10"
                    android:src="@drawable/back_arrow" />
            </LinearLayout>

            <TextView
                android:id="@+id/set_titel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_weight="2.18"
                android:singleLine="true"
                android:text="राज्य"
                android:textColor="@color/White"
                android:textSize="16dp"
                android:textStyle="bold" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginLeft="@dimen/size5"
                android:layout_marginTop="@dimen/size10"
                android:layout_weight="0.35">

                <ImageView
                    android:id="@+id/bookmark"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.35"
                    android:src="@drawable/bookmark">

                </ImageView>

                <ImageView
                    android:id="@+id/gold_bookmark"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/gold_bookmark">

                </ImageView>
            </LinearLayout>

            <ImageView
                android:id="@+id/share"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_weight="0.35"
                android:src="@drawable/share">

            </ImageView>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/size20"
                android:layout_marginTop="@dimen/size10"
                android:layout_weight="0.35">

                <ImageView
                    android:id="@+id/like"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:src="@drawable/like">

                </ImageView>

                <ImageView
                    android:id="@+id/redlike1"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_weight="0.35"
                    android:src="@drawable/redlike">

                </ImageView>
            </RelativeLayout>


        </LinearLayout>
    </android.support.v7.widget.Toolbar>

    <android.support.v4.widget.NestedScrollView
    android:layout_width="match_parent"
    app:stackFromEnd="true"
    app:reverseLayout="true"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        app:stackFromEnd="true"
        app:reverseLayout="true"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/sliding_text_marquee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/Light_Blue"
            android:ellipsize="marquee"
            android:padding="5dp"
            android:visibility="visible"
            android:singleLine="true"
            android:text="इजराइल से कृषि तकनीक साझा करना हमारे किसानों के लिए होगा फायदेमंद: बृजमोहन"
            android:textColor="@color/White"
            android:textSize="16sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="match_parent"
            app:stackFromEnd="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            app:reverseLayout="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_height="180dp">

            <ImageView
                android:id="@+id/news_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginTop="@dimen/size5"
                android:adjustViewBounds="true"
                android:background="@drawable/border"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:scaleType="fitXY"
                android:src="@mipmap/ic_launcher">


            </ImageView>

            <View
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="@color/Light_Blue"></View>


        </RelativeLayout>
        <TextView
            android:id="@+id/news_titel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:textIsSelectable = "true"
            android:textStyle="bold"
            android:paddingStart="@dimen/size10"
            android:text="गौहत्या मामला: शंकराचार्य ने दिया श्राप, जाने अब क्या होगा आगे!"
            android:textAlignment="viewStart"
            android:textColor="@color/Blue"
            android:textSize="18dp" />

        <View
            android:layout_width="match_parent"
            android:background="@color/gray"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="0.1dp"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:weightSum="3">

            <ImageView
                android:focusable="true"
                android:layout_width="15dp"
                android:layout_height="20dp"
                android:layout_marginTop="1dp"
                android:layout_marginLeft="15dp"
                android:src="@drawable/clock" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/news_date"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="2dp"
                android:text="August 25, 2017"
                android:textColor="#c3000000"
                android:textSize="14dp"
                android:textStyle="normal" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/news_discription"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:textIsSelectable = "true"
                android:layout_gravity="center_vertical|right"
                android:padding="5dp"
                android:text="OnlineCG बिलासपुर। छत्तीसगढ़ के दुर्ग और बेमेतरा जिला स्थित गौशाला में में भूख से सैकड़ों गायों की मौत पर अभी तक राजनीति थमी नहीं है। इस मामले में आए दिन कोई न कोई प्रदेश सरकार को घेर ही लेता है। इसी बीच अब धर्माचार्यों ने भी इस घटना की कड़ी आलोचना करना शुरू कर दिया है। वहीं खबर आ रही है कि इस मामले में अब पुरी के शंकराचार्य निश्चलानंद सरस्वती ने भी छत्तीसगढ़ सरकार को आड़े हाथों लिया है। उन्होंने कहा कि भाजपा सरकार गौ हत्यारों को संरक्षण देना बंद करें और रमन सरकार को गौ हत्या के दोषियों पर कड़ी कार्रवाई करना चाहिए।"
                android:textColor="@color/Black"
                android:textSize="14dp" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/Blue"
            android:textSize="16dp"
            android:layout_marginLeft="@dimen/size5"
            android:padding="@dimen/size5"
            android:textStyle="bold"
            android:text="Recommended"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#28000000">
        </View>
        <RelativeLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:clickable="true"
            android:layout_height="match_parent">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler"
                android:background="#8b999999"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/loader"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="160dp"
                android:layout_marginTop="@dimen/size50"
                android:src="@drawable/black" />

            </RelativeLayout>



    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
</LinearLayout>