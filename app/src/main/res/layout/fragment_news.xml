<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/background_selector"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent">
    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="100dp">
        <LinearLayout
            android:layout_width="96dp"
            android:orientation="horizontal"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/image1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:scaleType="fitCenter"
                android:src="@mipmap/ic_launcher" />
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/titel1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/size5"
                android:text="देश में गाय पर सियासत, लेकिन बदहाल हैं दिल्ली की गौशालाएं"
                android:textColor="@color/Blue"
                android:textSize="14dp"
                android:lines="2"/>

            <TextView
                android:id="@+id/content1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/titel1"
                android:layout_alignStart="@+id/titel1"
                android:layout_below="@+id/titel1"
                android:ellipsize="end"
                android:lines="2"
                android:text="OnlineCG रायपुर। प्रदेश के सबसे नामी पं. रविशंकर शुक्ल विवि के एमए संस्कृत द्वितीय वर्ष की वार्षिक परीक्षा का परिणाम बेहद चौंकाने वाला है। मार्च-अप्रैल 2017 को हुई इस परीक्षा का परिणाम गुरुवार को जारी कर दिया गया।"
                android:textColor="@color/Black"
                android:textSize="12dp"
               android:layout_marginRight="@dimen/size10"/>

            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/loaderitem"
                android:layout_width="25dp"
                android:layout_height="30dp"
                android:layout_marginLeft="55dp"
                android:layout_marginTop="@dimen/size30"
                android:src="@drawable/black"
                android:visibility="visible" />
        </RelativeLayout>
        <TextView
            android:id="@+id/cate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLength="100"
            android:gravity="end"
            android:layout_gravity="end"
            android:layout_marginRight="25dp"
            android:text=" "
            android:textColor="@color/gray"
            android:textSize="14dp"/>
    </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#28000000">
    </View>
</RelativeLayout>